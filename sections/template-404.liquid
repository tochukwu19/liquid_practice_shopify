<div class="max-w-md">
    <div class="text-5xl font-bold my-4">
        {{ section.settings.title }}
    </div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">
            {{ section.settings.subtext_html }}
        </p>
    </div>
    <div class="my-4">
    {% if section.settings.button_url == blank %}
        {% assign shop_url = shop.secure_url %}

        {% else %}
        
        {% assign shop_url = section.settings.button_url %}
    {% endif %}

        <a href="{{shop_url}}" class="text-base md:text-xl text-red-500 hover:text-red-700">{{ section.settings.button_text }}</a>
    </div>
</div>


{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex justify-center items-center h-screen py-7 bg-gray-100 text-center flex-col",
    "settings": [
            {
                "type": "header",
                "content": "404 Page"
            },
            {
                "type": "text",
                "id": "title",
                "label": "404 Heading Title",
                "default": "Page not found"
            },
            {
                "type": "text",
                "id": "subtext_html",
                "label": "Subtext",
                "default": "Sorry, the page you are looking for does not exist."
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Back to homepage button text",
                "default": "Go back to the home page"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Back to homepage button URL"
            }
        ]
}
{% endschema %}