<div class="container mx-auto">
  {% paginate search.results by 10 %}
    <h1 class="text-xl my-4 text-center">
      Search results for "{{ search.terms }}"
    </h1>

    <div class="flex justify-center items-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="border flex rounded">
        <input
          type="search"
          name="q"
          placeholder="Search"
          value="{{ search.terms |  escape }}"
          class="px-4 py-2 w-80 border-none">

        <button type="submit" class="bg-gray-900 hover:bg-gray-700 text-white border px-4">Search</button>
      </form>
    </div>

    {% if search.performed %}
      {% if search.results.size > 0 %}
        {% for item in search.results %}
          {% case item.object_type %}
            {% when "product" %}
              {% render "product-card"
                , product_product: item %}
              {% else %}

          {% endcase %}
        {% endfor %}

        {% else %}
            <div class="text-center text-gray-500 my-4">
                <p>No results found for "{{ search.terms }}"</p>
            </div>
      {% endif %}
    {% endif %}

    {% render "pagination"
      , pagination: paginate %}
  {% endpaginate %}
</div>